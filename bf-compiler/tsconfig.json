{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}