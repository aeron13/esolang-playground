rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
    	// allow read to authenticated users for their programs and to everyone for public programs
      allow read: if 
    	(	
      	request.auth != null 
        && (request.auth.uid == resource.data.userId || resource.data.public == true)
    	)
      || (request.auth == null && resource.data.public == true);
      // allow write to authenticated users for their programs 
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}